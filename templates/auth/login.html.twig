{% extends 'user_template.html.twig' %}

{% block body%}
    <div class="auth">
        <h2>Sign in to Symfony-Blog</h2>
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.message }}
            </div>
        {% endif %}

        {% for message in app.flashes('success_password') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-6">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" value="{{ last_username }}" placeholder="Enter email">
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>

                    <button type="submit" class="btn btn-primary">Sing in</button>
                    <a href="{{ path('registration') }}" class="btn btn-secondary" role="button">Create an account</a>
                </form>
                <a class="forgot-password" href="{{ path('get_token') }}">Forgot your password?</a>
            </div>
        </div>
    </div>
{% endblock %}