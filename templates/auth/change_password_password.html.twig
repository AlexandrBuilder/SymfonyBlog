{% extends 'user_template.html.twig' %}

{% block body %}
    <div class="auth">
        <h2>Change password</h2>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, {attr:{class:'form-control', placeholder:"Enter password"}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.second,  {attr:{class:'form-control ckeditor', placeholder:"Repeat password"}}) }}
            </div>
            <button type="submit" class="btn btn-primary">Change password</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

