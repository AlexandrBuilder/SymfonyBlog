<div class="filter">
    <form action="{{ path('admin_post_index') }}" class="row" method="GET">
        <div class="form-group col-sm-6 col-md-3 col-lg-3">
            <label for="select-input-email" name="email" class="col-form-label">Email</label>
            <select class="form-control multy-select2" name="email" id="select-input-email">
                {% if old_fields.email|length > 0 %}
                    <option value="{{ old_fields.email }}" selected>{{ old_fields.email }}</option>
                {% else %}
                    <option value="" disabled selected hidden>Choose status</option>
                {% endif %}
            </select>
        </div>
        <div class="form-group col-sm-6 col-md-3 col-lg-3">
            <label for="select-input-status" class="col-form-label">Status</label>
            <select class="form-control multy-select2" name="status" id="select-input-status">
                <option value="" selected hidden>Choose status</option>
                {% for post_status in post_statuses %}
                    {% if old_fields.status == post_status%}
                        <option value="{{ post_status }}" selected>{{ post_status }}</option>
                    {% else %}
                        <option value="{{ post_status }}">{{ post_status }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-sm-6 col-md-3 col-lg-3">
            <label for="date-input-from" class="col-form-label">Date from</label>
            {% if old_fields.date_from|length > 0 %}
                <input class="form-control" type="date" value="{{ old_fields.date_from }}" name="date_from" id="date-input-from">
            {% else %}
                <input class="form-control" type="date" value="{{ 'now'|date('Y-m-d') }}" name="date_from" id="date-input-from">
            {% endif %}
        </div>
        <div class="form-group col-sm-6 col-md-3 col-lg-3">
            <label for="date-input-to" class="col-form-label">Date to</label>
            {% if old_fields.date_to|length > 0 %}
                <input class="form-control" type="date" value="{{ old_fields.date_to }}" name="date_to" id="date-input-from">
            {% else %}
                <input class="form-control" type="date" value="{{ 'now'|date('Y-m-d') }}" name="date_to" id="date-input-from">
            {% endif %}
        </div>
        <div class="form-group col-sm-6 col-md-3 col-lg-3">
            <input type="submit" class="btn btn-primary" value="Search">
        </div>
    </form>
</div>