{% extends 'posts.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12 col-md-9 col-lg-9">
            {% for post in posts %}
                <div class="post-index background-index">
                    <h2>{{ post.title }}</h2>
                    <ul class="tags">
                        {% for tag in post.tags %}
                            <li>{{ tag }}</li>
                        {% endfor %}
                    </ul>
                    <div class="description">{{ (post.description |raw) }}</div>
                    <div class="row">
                        <div class="col-sm-6 col-md-4 col-lg-4">
                            <div class="author">
                                <span>Author:</span>
                                <a href="{{ path('user_show', {'id': post.user.id}) }}">{{ post.user.name }}</a>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="rating-box">
                                {{ include('assessment/new.html.twig') }}
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="count-comments">
                                <span>Comments: {{ post.comments|length }}</span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4 col-lg-2 post-btn">
                            <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-info" role="button" aria-pressed="true">Read more</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {{ paginator|raw }}
    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
