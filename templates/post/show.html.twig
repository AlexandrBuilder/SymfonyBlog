{% extends 'posts.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

    <div class="post-show">
    {#<table class="table">#}
        {#<tbody>#}
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ post.id }}</td>#}
            {#</tr>#}
            {#<tr>#}
                {#<th>Title</th>#}
                {#<td>{{ post.title }}</td>#}
            {#</tr>#}
            {#<tr>#}
                {#<th>Description</th>#}
                {#<td>{{ (post.description |raw) }}</td>#}
            {#</tr>#}
        {#</tbody>#}
    {#</table>#}

        <div class="post-index">
            <h2>{{ post.title }}</h2>
            <ul class="tags">
                {% for tag in post.tags %}
                    <li>{{ tag }}</li>
                {% endfor %}
            </ul>
            <div class="description">{{ (post.description |raw) }}</div>
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="author">
                        <span>Author:</span>
                        <a href="#">{{ post.user.name }}</a>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="rating-box">
                        {{ include('assessment/new.html.twig') }}
                    </div>
                </div>
            </div>
        </div>

        <hr>
        <div class="comments">
            <h2>Comments:</h2>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            {% for comment in post.comments %}
                <div class="comment">
                    <div class="autor-comment">Autor: {{ comment.user }}</div>
                    <div class="autor-content">{{ comment.comments }}</div>
                </div>
            {% endfor %}
            {{ comments_form.content | raw }}
        </div>
        <a href="{{ path('homepage') }}">back to list</a>

        <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

        {{ include('post/_delete_form.html.twig') }}
    </div>
{% endblock %}
